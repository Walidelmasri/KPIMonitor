@model IEnumerable<KPIMonitor.Models.DimPillar>
@{
    ViewData["Title"] = "Pillars";
}

<div class="container py-5">   <!-- or: <div class="page-container py-5"> -->
    @if (TempData["Msg"] is string msg)
    {
        <div class="alert alert-success rounded-4 mb-3" role="alert">
            @msg
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
                @section PageHeader {
            <div class="page-hero" style="background-image:url('@Url.Content("~/images/pic1.jpg")')">
                <div class="page-hero-content">
                    <h1 class="page-title">üèõÔ∏è Pillars</h1>
                </div>
            </div>
        }
        <a class="btn btn-primary rounded-4" href="@Url.Action("Create")">‚ûï Add Pillar</a>
    </div>

    <div class="table-responsive shadow-sm rounded-4 border bg-white">
        <table class="table table-striped table-bordered mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:40px;">Code</th>
                    <th>Name</th>
                    <th style="width:100px;">Active</th>
                    <th style="width:220px;">Audit</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@p.PillarCode</td>
                            <td>@p.PillarName</td>
                            <td>
                                @if (p.IsActive == 1)
                                {
                                    <span class="badge bg-success rounded-pill px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill px-3">Inactive</span>
                                }
                            </td>
                            <td class="small text-muted">
                                Created: @p.CreatedDate?.ToString("yyyy-MM-dd HH:mm") by @p.CreatedBy
                            </td>
                            <td>
                                @if (p.IsActive == 1)
                                {
                                    <a class="btn btn-sm btn-outline-warning rounded-3"
                                       href="@Url.Action("Inactivate", "Pillars", new { id = p.PillarId })">
                                        Set Inactive
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">‚Äî</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No pillars yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>