@{
    ViewData["Title"] = "Add KPI Value";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card Layout -->
            <div class="card shadow rounded-4">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0 text-dark fw-bold">ðŸ“¥ KPI Entry Form</h4>
                </div>
                <div class="card-body">
                    <!-- Form Start -->
                    <form>
                        <div class="mb-3">
                            <label class="form-label fw-semibold fs-6">Pillar</label>
                            <select class="form-select" disabled>
                                <option selected>Operational Excellence</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="objectiveSelect" class="form-label fw-semibold fs-6">Objective</label>
                            <select id="objectiveSelect" class="form-select">
                                <option selected disabled>Choose Objective</option>
                                <option>Increase Efficiency</option>
                                <option>Improve Satisfaction</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="kpiSelect" class="form-label fw-semibold fs-6">KPI</label>
                            <select id="kpiSelect" class="form-select">
                                <option selected disabled>Choose KPI</option>
                                <option>Delivery Time</option>
                                <option>Customer Feedback Score</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="kpiValue" class="form-label fw-semibold fs-6">KPI Value</label>
                            <input type="number" class="form-control" id="kpiValue" placeholder="Enter KPI value">
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="unitType" class="form-label fw-semibold fs-6">Unit Type</label>
                                <select id="unitType" class="form-select">
                                    <option selected disabled>Select Unit</option>
                                    <option>Percentage (%)</option>
                                    <option>Millions (EGP)</option>
                                    <option>Count</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="frequency" class="form-label fw-semibold fs-6">Frequency</label>
                                <select id="frequency" class="form-select">
                                    <option selected disabled>Select Frequency</option>
                                    <option>Monthly</option>
                                    <option>Quarterly</option>
                                    <option>Yearly</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg w-100">ðŸ’¾ Submit KPI</button>
                        </div>
                    </form>
                    <!-- Form End -->
                </div>
            </div>
        </div>
    </div>

    <!-- History Table -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-10">
            <h4 class="fw-semibold text-primary mb-4">ðŸ“œ KPI Entry History</h4>
            <div class="table-responsive shadow-sm rounded-4 border">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>KPI</th>
                            <th>Value</th>
                            <th>Unit</th>
                            <th>Frequency</th>
                            <th>Editor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2025-07-01</td>
                            <td>Delivery Time</td>
                            <td>12</td>
                            <td>Days</td>
                            <td>Monthly</td>
                            <td>Ahmed Ali</td>
                        </tr>
                        <tr>
                            <td>2025-06-01</td>
                            <td>Customer Feedback Score</td>
                            <td>88</td>
                            <td>%</td>
                            <td>Monthly</td>
                            <td>Sara Nabil</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
