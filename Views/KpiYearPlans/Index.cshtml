@model IEnumerable<KPIMonitor.Models.KpiYearPlan>
@{
    ViewData["Title"] = "KPI Year Plans";
    var filterYear = ViewBag.FilterYear as int?;
}
@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-success rounded-4 mx-3 mt-3">@msg</div>
}
<div class="container py-5">
                    @section PageHeader {
            <div class="page-hero" style="background-image:url('@Url.Content("~/images/pic1.jpg")')">
                <div class="page-hero-content">
                    <h1 class="page-title">ðŸ“… KPI Year Plans</h1>
                </div>
            </div>
        }
<!-- One row: filter (input + button) on the left, new year button on the right -->
<div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
    <!-- Filter form -->
    <form asp-action="Index" method="get" class="d-flex align-items-center gap-2 mb-0 flex-nowrap">
        <div class="input-group" style="width:auto;">
            <input type="number" name="year" class="form-control"
                   placeholder="Filter by year (e.g., 2025)"
                   value="@(filterYear?.ToString() ?? "")"
                   style="max-width:180px;" />
            <button type="submit" class="btn btn-outline-secondary">Filter</button>
        </div>

        @if (filterYear != null)
        {
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Reset</a>
        }
    </form>

    <!-- New Year Plan button -->
    <a class="btn btn-primary rounded-4" href="@Url.Action("Create")">âž• New Year Plan</a>
</div>

    <div class="table-responsive shadow-sm rounded-4 border bg-white">
        <table class="table table-striped table-bordered mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:40px;">Year</th>
                    <th>KPI</th>
                    <th style="width:120px;">Frequency</th>
                    <th style= "width:80px;">Unit</th>
                    <th style="width:140px;">Annual Target</th>
                    <th style="width:140px;">Annual Budget</th>
                    <th style="width:90px;">Priority</th>
                    <th style="width:100px;">Status</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@(p.Period?.Year.ToString() ?? "â€”")</td>
                            <td>@(p.Kpi != null ? $"{p.Kpi.KpiCode} â€” {p.Kpi.KpiName}" : p.KpiId.ToString())</td>
                            <td>@p.Frequency</td>
                            <td>@p.Unit</td>
                            <td>@(p.AnnualTarget?.ToString("0.###") ?? "â€”")</td>
                            <td>@(p.AnnualBudget?.ToString("0.###") ?? "â€”")</td>
                            <td>@(p.Priority?.ToString() ?? "â€”")</td>
                            <td>
                                @if (p.IsActive == 1)
                                {
                                    <span class="badge bg-success rounded-pill px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill px-3">Deactivated</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    @if (p.IsActive == 1)
                                    {
                                        <a class="btn btn-sm btn-outline-warning rounded-3" href="@Url.Action("Deactivate", new { id = p.KpiYearPlanId })">Deactivate</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-outline-success rounded-3" href="@Url.Action("Activate", new { id = p.KpiYearPlanId })">Activate</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="8" class="text-center text-muted py-4">No year plans found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>