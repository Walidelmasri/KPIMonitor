@using Microsoft.AspNetCore.Mvc.Rendering

<div class="modal fade" id="planCloneModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">

            <div class="modal-header">
                <h5 class="modal-title">Clone Year Plans</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="planCloneForm" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-body">

                    <div class="row g-3">
                        <div class="col-12">
                            <div class="btn-group" role="group" aria-label="Clone scope">
                                <input type="radio" class="btn-check" name="scope" id="cloneScopeKpi" value="kpi"
                                    checked>
                                <label class="btn btn-outline-primary" for="cloneScopeKpi">By KPI</label>

                                <input type="radio" class="btn-check" name="scope" id="cloneScopePillar" value="pillar">
                                <label class="btn btn-outline-primary" for="cloneScopePillar">By Pillar</label>
                            </div>
                            <div class="small text-muted mt-2">Start with a single KPI to test, then use pillar bulk
                                cloning.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Source Year</label>
                            @Html.DropDownList("sourceYearPeriodId", (SelectList)ViewBag.YearPeriods, new { @class =
                                                        "form-select" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Target Year</label>
                            @Html.DropDownList("targetYearPeriodId", (SelectList)ViewBag.YearPeriods, new { @class =
                                                        "form-select" })
                        </div>

                        <div class="col-12" id="cloneKpiRow">
                            <label class="form-label">KPI</label>
                            @Html.DropDownList("kpiId", (SelectList)ViewBag.Kpis, "Select KPI", new { @class =
                                                        "form-select" })
                        </div>

                        <div class="col-12 d-none" id="clonePillarRow">
                            <label class="form-label">Pillar</label>
                            @Html.DropDownList("pillarId", (SelectList)ViewBag.Pillars, "Select Pillar", new { @class =
                                                        "form-select" })
                        </div>

                        <div class="col-12">
                            <div class="alert alert-info rounded-4 mb-0">
                                <div class="fw-semibold">What gets cloned</div>
                                <div class="small">
                                    Creates new <code>KPIYEARPLAN</code> rows for the target year by copying every field
                                    from the source plan
                                    (frequency, owner/editor, direction, unit, targets, budget, priority, logins, active
                                    flag, etc.) and only
                                    swapping the <strong>Year Period</strong> to the target year.
                                </div>
                            </div>
                        </div>

                        <div class="col-12 d-none" id="cloneResult"></div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" id="cloneBtn" class="btn btn-primary">
                        <span class="me-2">Clone</span>
                        <span id="cloneSpinner" class="spinner-border spinner-border-sm d-none" role="status"
                            aria-hidden="true"></span>
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>